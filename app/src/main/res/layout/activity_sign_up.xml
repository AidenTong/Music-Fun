<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.authentication.SignUp">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:titleCentered="true"
        app:title="@string/app_name"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.MaterialToolbar>
    <TextView
        android:id="@+id/txvSignUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="25dp"
        android:text="@string/sign_up"
        android:textColor="@color/horizontal_line_color"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txvSignUpDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:text="@string/sign_up_description"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_white_text_background"
        android:elevation="8dp"
        android:ems="10"
        android:hint="@string/enter_your_full_name"
        android:inputType="text"
        android:paddingHorizontal="24dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_white_text_background"
        android:elevation="8dp"
        android:ems="10"
        android:hint="@string/enter_your_email_address"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="24dp"
        android:singleLine="false"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_white_text_background"
        android:elevation="8dp"
        android:ems="10"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:paddingHorizontal="24dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextTextPasswordAgain"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_white_text_background"
        android:elevation="8dp"
        android:ems="10"
        android:hint="@string/enter_your_password_again"
        android:inputType="textPassword"
        android:paddingHorizontal="24dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="45dp"
        android:background="@color/blue_300"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txvHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alpha="0.8"
        android:text="@string/have_an_account"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:text="@string/sign_in"
        android:textColor="#0A72BA"
        android:textSize="20sp" />
</LinearLayout>